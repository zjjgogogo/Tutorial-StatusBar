<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/activity_bg_color</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- status bar bg color  it is useful in more than API20  -->
        <item name="colorPrimary">@color/theme_color_default</item>
        <!-- action bar bg color !-->
        <item name="colorPrimaryDark">@color/theme_color_default</item>

    </style>


    <style name="AppTheme1" parent="AppTheme">
        <!-- status bar bg color  it is useful in more than API20  -->
        <item name="colorPrimary">@color/theme_color1</item>
        <!-- action bar bg color !-->
        <item name="colorPrimaryDark">@color/theme_color1</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <!-- status bar bg color  it is useful in more than API20  -->
        <item name="colorPrimary">@color/theme_color2</item>
        <!-- action bar bg color !-->
        <item name="colorPrimaryDark">@color/theme_color2</item>
    </style>

</resources>
