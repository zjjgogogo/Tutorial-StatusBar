<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamesjaw.tutorial_statusbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SelectTypeActivity"
            android:label="@string/title_activity_select_type">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Theme1Activity"
            android:label="@string/title_activity_theme1"
            android:theme="@style/AppTheme1"></activity>
        <activity
            android:name=".Theme2Activity"
            android:label="@string/title_activity_theme2"
            android:theme="@style/AppTheme2"></activity>
    </application>

</manifest>
